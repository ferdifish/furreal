<div class="container">
  <div class="pet-profile d-flex flex-row">
    <%= cl_image_tag(@pet.photos.first.key) %>
    <div class="pet-info ml-3">
      <h1> <%= @pet.name %> the <%= @pet.species %> </h1>
      <p> <%= @pet.description %> </p>
      <h5> $<%= @pet.price_per_day %> per day </h5>
    </div>
  </div>

  <div class="bookings_form">
    <%= render "shared/booking_form" %>
  </div>

  <div class="reviews_index">
    <h1>Reviews:</h1>
    <% if @reviews != nil %>
      <% @reviews.each do |review| %>
        <div class="cards">
          <%= review.content %>
          <%= "*" * review.rating %>
        </div>
      <% end %>
    <% else %>
      <p>No reviews yet</p>
    <% end %>
  </div>

  <%= link_to "Back", pets_path, class: "btn btn-primary" %>

</div>


<%#= render 'shared/booking_form' %>

