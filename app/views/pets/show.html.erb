<div class="container d-flex flex-row">
  <div class="pet-profile">
    <img width = "500px" src= <%= @pet.photo %> >
  </div>
  <div class="pet-info ml-3">
    <h1> <%= @pet.name %> the <%= @pet.species %> </h1>
    <p> <%= @pet.description %> </p>
    <h5> $<%= @pet.price_per_day %> per day </h5>
    <%= link_to 'Book me', new_pet_booking_path(@pet), class: "btn btn-primary" %>
  </div>
</div>

<%#= render 'bookings/new' %>

<%#= render 'reviews/index' %>

<% if @pet.user == current_user %>
  <%= link_to 'Delete Listing', pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<%#= this is for the reviews button %>
<% if @reviews != nil %>
  <% @reviews.each do |review| %>
    <%= review.content %>
    <%= review.rating %>
  <% end %>
<% end %>

<br>
<%= link_to new_booking_review_path(@pet) do %>
<button class="btn btn-primary">Add a review</button>
<% end %>


