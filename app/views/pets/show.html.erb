<h1><%= @pet.name %></h1>

<% @reviews.each do |review| %>
<%= review.content %>
<%= review.rating %>

<br>
<% end %>
<% if @pet.photo.attached? %>
<%= cl_image_tag @pet.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<br>
<%= link_to new_booking_review_path(@pet) do %>
<button class="btn btn-primary">Add a review</button>
<% end %>
