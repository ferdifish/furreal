<h2 class='border-bottom'>Pets in London</h2>
  <div class='row'>
    <div class='col-6'>
    <% @pets.each do |pet| %>
      <div class='card-product m-3'>
        <% if pet.photos.any? %>
        <%= cl_image_tag(pet.photos.first.key, width: 30) %>
        <% else %>
        <%= image_tag 'default.jpg', alt: 'alttext' %>
        <% end %>

        <div class='container'>
          <div class='card-product-infos'>
              <div class='row'>
                <div class='col-6'>
                  <h2><%= link_to "#{pet.name} (#{pet.species})", pet_path(pet)%></h2>
                  <p>$<%= pet.price_per_day %> <em>/day</em></p>
                  <p><%= pet.description %></p>
                </div>
                <div class="col-6">
                  <p>
                  <% (full = rand(1..5)).times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                  <% (5-full).times do %>
                    <i class="far fa-star"></i>
                  <% end %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      <div class="border-bottom"></div>
    <% end %>
    </div>
    <div class='col-6'>
      <div
      id='map'
      style='width: 100%;
      height: 100vh;
      position: sticky;
      top: 0;
      margin: 10px, 0px;
      '
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    </div>
  </div>
</div>

