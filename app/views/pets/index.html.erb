<h2><strong>(Search Query Here) near you:</strong></h2>
<div class="container d-flex text-center">
  <div class="cards">
    <% @pets.each do |pet| %>
    <div class='row'>
      <div class='col-12'>
        <div class="card-product">
          <% if pet.photos.any? %>
          <%= cl_image_tag pet.photos.first.key, height: 300, width: 300, crop: :fill, class: 'card-image' %>
          <% else %>
          <%= image_tag "default.jpg", alt: "alttext" %>
          <% end %>
          <div class="card-product-infos">
          <h2><%= link_to "#{pet.name} (#{pet.species})", pet_path(pet)%></h2>
          <p>$<%= pet.price_per_day %> <em>per day</em></p>
          <p><%= pet.description %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div
    id="map"
    style="width: 100%;
    height: 600px;
    margin:30px"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
