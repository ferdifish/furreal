<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://petsrus.com.au/uploads/images/group-of-animals.jpg);">
  <div class="container">
    <h1 class="banner-title">Fur Real</h1>
    <p>Rent a pet best friend today!</p>
    <a class="btn btn-light" href="#">Hire me!</a>
  </div>
</div>

<div class="container">
  <h2>Pets</h2>
  <%= link_to "Add +", new_pet_path, class: 'btn btn-light'%>
  <br>
  <div class="cards">
    <% @pets.each do |pet| %>
      <div class="card">
        <h2><%= link_to pet.name, pet_path(pet)%></h2>
        <p><%= pet.species %></p>
        <p><%= pet.price_per_day %></p>
        <% if pet.photo.present? %>
          <%=  cl_image_tag pet.photo, height: 300, width: 330, crop: :fill %>
        <% end %>
        <%= link_to 'Delete', pet_path(pet), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>
