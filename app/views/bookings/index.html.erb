<div class="container text-center ">
  <h2>Past Bookings</h2>
    <% @bookings.each do |booking| %>
      <% if booking.user == @user %>
      <div class='row'>
        <div class='col-12 col-md-6 offset-md-3'>
          <div class="card-product" style='margin: 20px'>
          <%= cl_image_tag(booking.pet.photos.first.key) %>
            <div class="card-product-infos">
              <h2><%= booking.pet.name %></h2>
              <h2><%= booking.start_date.strftime("%a, %d %B, %Y") %> - <%= booking.end_date.strftime("%a, %d %B, %Y") %> </h2>
              <% if Time.now > booking.end_date %>
                <%= link_to new_booking_review_path(booking) do %>
                <button class="btn btn-primary" style='margin: 10px'>Add a review</button>
              <% end %>
      <% end %>
              <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
                <button class="btn btn-primary" style='margin: 10px'>Delete</button>
              <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  <h2>Upcoming Bookings</h2>
    <% @upcoming_bookings.each do |booking| %>
      <% if booking.user == @user %>
  <div class='row'>
    <div class='col-12 col-md-6 offset-md-3'>
        <div class="card-product" style='margin: 20px'>
          <%= cl_image_tag(booking.pet.photos.first.key) %>
        <div class="card-product-infos">
          <h2><%= booking.pet.name %></h2>
          <h2><%= booking.start_date.strftime("%a, %d %B, %Y") %> - <%= booking.end_date.strftime("%a, %d %B, %Y") %> </h2>
          <% if Time.now > booking.end_date %>
            <%= link_to new_booking_review_path(booking) do %>
              <button class="btn btn-primary" style='margin: 10px'>Add a review</button>
          <% end %>
      <% end %>
            <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
              <button class="btn btn-primary" style='margin: 10px'>Delete</button>
            <% end %>
        </div>
      </div>
      </div>
      </div>
    <% end %>
  <% end %>
</div>
